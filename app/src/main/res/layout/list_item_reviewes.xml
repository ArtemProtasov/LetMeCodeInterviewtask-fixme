<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp">
    
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:padding="10dp">
            <ImageView
                android:contentDescription="@string/desc_image"
                android:id="@+id/img_reviewes"
                android:layout_width="105dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/txt_title_reviewes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/img_reviewes" />

            <TextView
                android:id="@+id/txt_summary_short_reviewes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_reviewes"
                android:layout_toEndOf="@+id/img_reviewes"/>

            <TextView
                android:id="@+id/txt_byline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_summary_short_reviewes"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/black" />
            
            <TextView
                android:id="@+id/txt_date_reviewes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_byline"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/black" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>